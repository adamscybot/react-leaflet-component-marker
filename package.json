  "author": "adamscybot",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adamscybot/react-leaflet-component-marker.git"
  },
  "bugs": {
    "url": "https://github.com/adamscybot/react-leaflet-component-marker/issues"
  },
  "keywords": [
    "react",
    "react-leaflet",
    "leaflet"
  ],
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*"
